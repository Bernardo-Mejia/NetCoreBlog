@model AppBlogCore.Models.Slider

@{
    ViewData["Title"] = "Create Slider";
}

<br>
<br>
<h3 class="text-center">Create a new Slider</h3>

<form method="POST" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row my-3">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Name"></label>

                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row my-3">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Status"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Status" class="form-check-input" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row my-3">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="UrlImagen"></label>

                    </label>
                </div>
                <div class="col-6">
                    <input type="file" name="files" id="uploadFiles" class="form-control" />
                </div>
            </div>

            <div class="form-group row my-3">
                <div class="col-8">
                    <partial name="_ViewCreateBack" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}