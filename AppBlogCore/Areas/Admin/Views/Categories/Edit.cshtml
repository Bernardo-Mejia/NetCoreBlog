@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<br>
<br>
<h3 class="text-center">Edit category</h3>

<form method="POST" asp-action="Edit">
    <input asp-for="Id" type="hidden" />
    <div class="row px-2 offset-1 border ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row my-3">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Name"></label>

                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row my-3">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Order"></label>

                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Order" class="form-control" placeholder="Enter Order" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row my-3">
                <div class="col-12">
                    <button type="submit" class="btn btn-warning form-control my-2" asp-route-id="@Model.Id">Update</button>
                </div>
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-primary form-control">Back list</a>
                </div>
            </div>
        </div>
    </div>
</form>